<%= simple_form_for [:admin, @sub_category], :html => { :multipart => true } do |f| %>
	<%=	f.input :name %>
	<%=	f.input :name_ru %>
	<%=	f.input :description, :as => :text, :input_html => {:columns => 6, :rows => 4} %>
	<%=	f.input :description_ru, :as => :text, :input_html => {:columns => 6, :rows => 4} %>
	<%=	f.input :priority %>
	<%= f.association :category, :collection => Category.all(:order => 'name')%>
	<%=	f.button :submit, :value => "SaglabÄt" %>
<% end %>